params=r:$zaehler,r:$nenner
work=$counter,$oldcounter,$mult,$oldmult,$i
---
cmp $nenner,1
jne normal
set $nenner,0
jmp fertig
:normal
set $oldcounter,0
set $oldmult,0
set $mult,$nenner
set $counter,1
set $i,0
:loop
add $i,1
cmp $i,16
jg endloop
cmp $mult,$zaehler
jb weiter
sub $zaehler,$oldmult
jmp endloop
:weiter
set $oldmult,$mult
add $mult,$mult
set $oldcounter,$counter
add $counter,$counter
jmp loop
:endloop
set $counter,$oldcounter
:while
cmp $zaehler,$nenner
jb done
sub $zaehler,$nenner
add $counter,1
jmp while
:done
set $nenner,$zaehler
set $zaehler,$counter
:fertig