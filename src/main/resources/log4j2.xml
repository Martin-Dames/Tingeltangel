<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="CoreFile" fileName="tt.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="CompilerFile" fileName="compiler.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="EmulatorFile" fileName="emulator.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="warn">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="CoreFile"/>
        </Root>
        <Logger name="tingeltangel.Tingeltangel" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="CoreFile"/>
        </Logger>
        <Logger name="compiler" level="trace">
            <AppenderRef ref="CompilerFile"/>
        </Logger>
        <Logger name="emulator" level="trace">
            <AppenderRef ref="EmulatorFile"/>
        </Logger>
    </Loggers>
</Configuration>